@model IEnumerable<falena.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>
    Products
    <a asp-action="Create">
        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-plus-circle btn-outline-success d-inline display-4 ml-5 mt-n2" fill="currentColor" xmlns="http://www.w3.org/2000/svg" style="border-radius: 100%;padding: 2pt;">
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
            <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"></path>
        </svg>
    </a>
</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceList)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedRevenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
                
            </th>
            <th><a class="btn btn-outline-warning" href="@Url.Action("Index", new {showAll = ViewData["showAll"]})">

                @if ((bool)(ViewData["showAll"] ?? false))
                {
                    <span>Hide inactive</span>

                }
                else
                {
                    <span>Show inactive</span>

                }
            </a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedRevenue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
                
            </td>
            <td class="btn-group">
                <a class="btn btn-outline-primary"   asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a class="btn btn-outline-danger"    asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

